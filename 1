<body>
    <h1>[Azra] ❤️</h1>
    <h2>Seni Çok Seviyorum!</h2>

    <p>Birlikte olduğumuz gün sayısı:</p>
    <p id="counter"></p>

    <button onclick="showReason(); createHeartRain();">Neden?</button>
    <p id="reason"></p>

    <div class="gallery">
        <img src="photo1.jpg" alt="Biz">
        <img src="photo2.jpg" alt="Biz">
        <img src="photo3.jpg" alt="Biz">
    </div>

    <audio autoplay loop>
        <source src="music.mp3" type="audio/mpeg">
    </audio>

    <script>
        const reasons = [
            "Gözlerin bana huzur veriyor 💖",
            "Seninle her şey daha güzel 🌸",
            "Sesin dünyamı aydınlatıyor 🎶",
            "Gülüşün içimi ısıtıyor ☀️",
            "Hayatımın en güzel kısmısın ❤️",
            "Seninle dünya daha anlamlı 💫",
            "Kalbim seninle ritim buldu 🎵"
        ];

        function showReason() {
            const randomIndex = Math.floor(Math.random() * reasons.length);
            document.getElementById("reason").textContent = reasons[randomIndex];
        }

        const startDate = new Date("2023-07-01"); // Buraya tanışma/sevgili olduğunuz tarihi yaz
        const today = new Date();
        const diffTime = today - startDate;
        const diffDays = Math.floor(diffTime / (1000 * 60 * 60 * 24));
        document.getElementById("counter").textContent = diffDays + " gündür birlikteyiz ❤️";

        function createHeartRain() {
            for (let i = 0; i < 20; i++) {
                const heart = document.createElement('div');
                heart.classList.add('heart');
                heart.style.left = Math.random() * 100 + 'vw';
                heart.style.animationDuration = (Math.random() * 3 + 3) + 's';
                heart.textContent = '❤️';
                document.body.appendChild(heart);
                setTimeout(() => heart.remove(), 6000);
            }
        }
    </script>
</body>
